
<%= simple_form_for(@car) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :brand %>
    <%= f.input :model %>
    <%= f.input :plate %>
    <%= f.input :garage %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
